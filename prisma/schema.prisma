generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  passwordHash  String   @map("password_hash")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  
  transactions    Transaction[]
  creditCards   CreditCard[]
  assets        Asset[]
  liabilities   Liability[]
  financialGoals FinancialGoal[]
  subscriptions Subscription[]

  @@map("users")
}

model Transaction {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  title       String
  amount      Decimal  @db.Decimal(12, 2)
  type        String
  status      String   @default("completed")
  date        DateTime @db.Date
  category    String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

model CreditCard {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  name        String
  institution String
  closingDay  Int?     @map("closing_day")
  dueDay      Int?     @map("due_day")
  creditLimit Decimal? @db.Decimal(12, 2) @map("credit_limit")
  color       String   @default("#6366f1")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("credit_cards")
}

model Asset {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  type             String
  name             String
  currentValue     Decimal  @db.Decimal(12, 2) @default(0) @map("current_value")
  monthlyIncome    Decimal  @db.Decimal(12, 2) @default(0) @map("monthly_income")
  acquisitionDate  DateTime? @db.Date @map("acquisition_date")
  acquisitionValue Decimal? @db.Decimal(12, 2) @map("acquisition_value")
  notes            String?
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("assets")
}

model Liability {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  type             String
  name             String
  currentValue     Decimal  @db.Decimal(12, 2) @default(0) @map("current_value")
  monthlyExpense   Decimal  @db.Decimal(12, 2) @default(0) @map("monthly_expense")
  acquisitionDate  DateTime? @db.Date @map("acquisition_date")
  acquisitionValue Decimal? @db.Decimal(12, 2) @map("acquisition_value")
  notes            String?
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("liabilities")
}

model FinancialGoal {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  title         String
  description   String?
  targetAmount  Decimal  @db.Decimal(12, 2) @map("target_amount")
  currentAmount Decimal  @db.Decimal(12, 2) @default(0) @map("current_amount")
  targetDate    DateTime @db.Date @map("target_date")
  category      String   @default("other")
  status        String   @default("active")
  icon          String   @default("ðŸŽ¯")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("financial_goals")
}

model Subscription {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  amount    Decimal  @db.Decimal(12, 2)
  frequency String
  notes     String?
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}
